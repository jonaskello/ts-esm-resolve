{
  "name": "ts-esm-resolve",
  "version": "1.0.0",
  "main": "./lib/index.js",
  "license": "MIT",
  "description": "Resolve typescript ES modules",
  "dependencies": {
    "arg": "^4.1.0",
    "json5": "^2.1.2",
    "strip-bom": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.1",
    "esbuild": "^0.13.2",
    "jest": "^27.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build_old": "tsc && cp -a ./src/support ./lib/support",
    "build": "tsc",
    "rebuild": "yarn clean && yarn build",
