    "example1": "yarn build && cd ./examples/example1 && TS_NODE_PROJECT=./packages/server/tsconfig.json node --loader ../esbuild-loader/loader.mjs --experimental-specifier-resolution=node --enable-source-maps ./packages/server/src/server.ts"
