{
  "name": "ts-esm-resolve",
  "version": "0.1.0",
  "description": "Resolve typescript ES modules",
  "main": "./lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jonaskello/ts-esm-resolve.git"
  },
  "keywords": [
    "typescript",
    "esm",
    "resolve",
    "modules"
  ],
  "author": "Jonas Kello <jonas.kello@gmail.com>",
  "files": [
    "/lib",
    "/src",
    "package.json",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "debug": "^4.3.2",
    "json5": "^2.2.0",
    "strip-bom": "^4.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.9.1",
    "@types/strip-bom": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "confusing-browser-globals": "^1.0.10",
    "esbuild": "^0.13.2",
    "eslint": "^7.32.0",
    "eslint-config-divid": "^0.6.0",
    "eslint-plugin-functional": "^3.7.2",
    "eslint-plugin-import": "^2.24.2",
    "husky": ">=6",
    "jest": "^27.2.4",
    "lint-staged": ">=10",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build_old": "tsc && cp -a ./src/support ./lib/support",
    "build": "tsc",
    "rebuild": "yarn clean && yarn build",
    "clean": "rm -rf lib",
    "lint": "eslint './src/**/*.ts{,x}' --ext .js,.ts,.tsx -f visualstudio",
    "test-debug": "DEBUG=ts-resolve,tsconfig-info jest",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "example1-debug": "yarn build && cd ./examples/example1 && TS_NODE_PROJECT=./packages/server/tsconfig.json DEBUG=ts-resolve,tsconfig-info node --loader ../esbuild-loader/loader.mjs --experimental-specifier-resolution=node --enable-source-maps ./packages/server/src/server.ts",
    "example1": "yarn build && cd ./examples/example1 && TS_NODE_PROJECT=./packages/server/tsconfig.json node --loader ../esbuild-loader/loader.mjs --experimental-specifier-resolution=node --enable-source-maps ./packages/server/src/server.ts",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint -f visualstudio",
    "*.{ts,tsx,js,json,css,md}": [
      "prettier --write"
    ]
  }
}
